<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="vtu.hackathon.srrs.futureeducation.activity.SubStreamActivity">



    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <android.support.v4.widget.DrawerLayout
        android:layout_below="@+id/app_bar"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!--heading-->
            <TextView
                android:id="@+id/heading"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="What is Engineering?"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--content-->
            <TextView
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="\t\t\t\tsathish sathish sathish sathish sathish sathish sathish sathish "
                android:layout_below="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <fragment
            android:id="@+id/fragment_navigation_drawer"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer"
            android:name="vtu.hackathon.srrs.futureeducation.fragment.NavigationDrawerFragment"
            tools:layout="@layout/fragment_navigation_drawer" />
    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>
